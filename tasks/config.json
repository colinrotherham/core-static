{
  "clean": {
    "src": "./dist"
  },
  "copy": {
    "src": [
      "./src/**/*.*",
      "!./src/views",
      "!./src/views/**/*",
      "!./src/assets",
      "!./src/assets/**"
    ],
    "watch": "./src/**/*",
    "dest": "./dist"
  },
  "css": {
    "src": [
      "./src/assets/scss/critical.scss",
      "./src/assets/scss/main.scss",
      "./src/assets/scss/legacy.scss"
    ],
    "watch": "./src/assets/**/*.scss",
    "dest": "./dist/assets/css"
  },
  "html": {
    "nunjucks":   {
      "src": "./src/views/*.njk",
      "options": {
        "views": "./src/views"
      },
      "watch": [
        "./src/views/**/*.njk",
        "./dist/assets/css/critical.min.css",
        "./dist/assets/js/critical.min.js"
      ],
      "dest": "./dist"
    }
  },
  "img": {
    "optimise": {
      "src": "./dist/assets/img/**/*.{png,jpg,gif,svg}",
      "dest": "./dist/assets/img"
    }
  },
  "js": {
    "webpack": {
      "src": [
        "./src/assets/js/critical.js",
        "./src/assets/js/main.js",
        "./src/assets/js/legacy.js"
      ],
      "watch": "./src/assets/**/*.js",
      "dest": "./dist/assets/js"
    }
  },
  "serve": {
    "src": "./dist"
  }
}
